{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "types": [
            "node",
            "jest"
        ],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "include": [
        "tests/**/*",
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}